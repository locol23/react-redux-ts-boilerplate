{
  "name": "react-ts-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/locol23/react-ts-boilerplate.git",
  "author": "Yoshitaka Terazawa <locol6622@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "parcel": "parcel src/index.html",
    "lint": "tslint --fix src/*.tsx src/**/*.tsx",
    "lint-watch": "chokidar src/*.tsx src/**/*.tsx -c 'npm run lint'",
    "build": "run-s clean lint && run-p lint-watch parcel"
  },
  "dependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "recompose": "^0.27.1",
    "redux": "^4.0.0",
    "styled-components": "^3.3.0"
  },
  "devDependencies": {
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.5",
    "@types/recompose": "^0.26.1",
    "chokidar-cli": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.8.1",
    "prettier": "^1.13.4",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.1"
  }
}
